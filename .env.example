# =============================================================================
# .env.example — Infra (docker-compose central)
# Copia este archivo como .env y ajusta los valores para tu entorno.
# NUNCA commitear el .env real al repositorio.
# =============================================================================

# ─── Shared / Global ────────────────────────────────────────────────────────
JWT_SECRET_KEY=changeme-jwt-secret
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_DEBUG=true

# CORS (compartido por todos los backends)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173

# ─── RabbitMQ ────────────────────────────────────────────────────────────────
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ─── Image Tags (cambiar para la demo) ──────────────────────────────────────
TICKET_IMAGE_TAG=develop
USERS_IMAGE_TAG=develop
NOTIFICATION_IMAGE_TAG=develop
ASSIGNMENT_IMAGE_TAG=develop
FRONTEND_IMAGE_TAG=main

# ─── Ticket Service ─────────────────────────────────────────────────────────
TICKET_SERVICE_SECRET_KEY=changeme-ticket-secret
TICKET_POSTGRES_DB=sistema_tickets
TICKET_POSTGRES_USER=postgres
TICKET_POSTGRES_PASSWORD=postgres
TICKET_RABBITMQ_EXCHANGE_NAME=tickets

# ─── Users Service ──────────────────────────────────────────────────────────
USER_SERVICE_SECRET_KEY=changeme-users-secret
USERS_POSTGRES_DB=users_db
USERS_POSTGRES_USER=postgres
USERS_POSTGRES_PASSWORD=postgres
USERS_RABBITMQ_EXCHANGE_NAME=ticket_events
USERS_RABBITMQ_QUEUE_USERS=users_queue

# ─── Notification Service ───────────────────────────────────────────────────
NOTIFICATION_SERVICE_SECRET_KEY=changeme-notif-secret
NOTIFICATION_POSTGRES_DB=notifications_db
NOTIFICATION_POSTGRES_USER=notif_user
NOTIFICATION_POSTGRES_PASSWORD=notif_pass
NOTIFICATION_RABBITMQ_EXCHANGE_NAME=tickets_exchange
NOTIFICATION_RABBITMQ_QUEUE=notification_queue

# ─── Assignment Service ─────────────────────────────────────────────────────
ASSIGNMENT_SERVICE_SECRET_KEY=changeme-assignment-secret
ASSIGNMENT_POSTGRES_DB=assignment_db
ASSIGNMENT_POSTGRES_USER=assignment_user
ASSIGNMENT_POSTGRES_PASSWORD=assignment_pass
ASSIGNMENT_RABBITMQ_EXCHANGE_NAME=ticket_events
ASSIGNMENT_RABBITMQ_QUEUE=assignment_queue
